<h1 align="center">Listing All Categories</h1>

<div align="center">
<%= will_paginate %>
  <% @categories.each do |c| %>
    <ul class="listing">
      <div class="row">
        <div class="card-block col-md-4 offset-md-4">
          <li class="article-title">
            <%= link_to "#{c.name}", category_path(c) %>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>

